[VictorySlim]
Author = Darin (edit of Simplyer by SCruelAngel with bits from NoisyBox by peedanee)
Type = G+
Title = ♫ Music ♫
Default = Window(size=480x800)
DefaultFocus =
KeyBindings = a-Return OpenSongProp c-space PlayPause a-Left PrevSong a-Right NextSong c-Down DecVolume c-Up IncVolume
VolumeScroll = VolumeIcon
DefaultFocus = Play

Window = hidden=HBMenubar|HBQueue
Window = dragtomove=1

VBMain = HBMenubar HBSliderbar VBurn HBSearch _VPCenter0 HBStatusBar


    HBMenubar = MBEdit
        MBEdit = SMMusic0 SMEdit1 SMView20 SMControl3 SMHelp4
            SMMusic0 = (label=_"Music") \
		MenuItem204(command="RunPerlCode(::ChooseAddPath(0,1))",label=_"Add Music",icon="gtk-add") \
		MenuItem205(command="RunPerlCode(::IdleScan)",label=_"Rescan Collection",icon="gtk-refresh") \
                SeparatorMenuItem100 \
                MenuItem102(command="OpenSongProp",label=_"Song Properties") \
		MenuItem103(click1=OpenCustom(Equalizer),label=_"Equalizer",icon=gmb-equalizer) \
                MenuItem104(command=OpenPref,label=_"Settings") \
                SeparatorMenuItem101 \
                MenuItem105(command=Quit,label=_"Quit")
				    

            # SMView menu for common mode
            SMView20 = (label=_"View") \
                LayoutItem01 \
                SeparatorMenuItem102 \
                MenuItem306(togglewidget=BMSettings,label=_"Menubutton")

            SMControl3 = (label=_"Control") \
		PlayItem01 \
                SeparatorMenuItem103 \
                MenuItem107(command=PlayPause,label=_"Play") \
                MenuItem108(command=PrevSong,label=_"Previous") \
                MenuItem109(command=NextSong,label=_"Next") \
                SeparatorMenuItem104 \
                MenuItem110(command=IncVolume,label=_"Increase volume") \
                MenuItem111(command=DecVolume,label=_"Decrease volume")

            SMHelp4 = (label=_"Help") \
                MenuItem112(command="RunPerlCode(::AboutDialog)",label=_"About",icon="gtk-about")


			HBCover = (maxheight=100,minheight=100,minwidth=100,maxwidth=100,tip=_"Title: %t (Track No. %n)")
        	        	  Cover(overlay=6x6:350x350:elementary/overlay.png,default=elementary/no-cover.svg,showcover=0,minsize=150,maxsize=150,tip=_"Title: %t (Track No. %n)")
	HBSliderbar = HBText 
			HBText = 4HBCover 5HBSongInfo 
			HBSongInfo = VBTitle
				VBTitle = \
					Title(expand_max=39,minsize=40,markup="%t",tip=_"Title: %t (Track No. %n)",font="") \
					Text(markup="<small><b>by</b></small>") \
					Artist(tip=_"Artist: %a",yalign=0.5,markup="%a") \
					Text2(markup="<small><b>on</b></small>") \
					Album(tip=_"Album: %l (%Y)",yalign=0.5,markup="%l",showcover=0)
	VBurn = HBControls HBVolume
		HBControls = Prev Play Next _TimeSlider(direct_mode=0) BMSettings Sort(button=1,size="large-toolbar") VolumeIcon(button=1,click2=mute,tip=_"Left-click or scrollwheel to change, right-click to mute")
			BMSettings = (icon=gmb-menu,size="large-toolbar") \
				MenuItem01(togglewidget=HBMenubar,label=_"Toggle Menubar") \
				MenuItem02(togglewidget=VPCenter1,label=_"Panel - Song List & Directory Tree") \
				MenuItem03(togglewidget=VBFilterAndSongList1,label=_"Toggle Song List") \
				MenuItem04(togglewidget=VPFile,label=_"Toggle Directory Tree") \
				SeparatorMenuItem01 \
				MenuItem05(togglewidget=VPCenter2,label=_"Panel - Playlists/Filters & Queue") \
				MenuItem06(togglewidget=VPFilterPlaylist,label=_"Toggle Playlists & Filters") \
				MenuItem07(togglewidget=VPQueue,label=_"Toggle Queue") \
				MenuItem08(togglewidget=HBStatusBar,label=_"Toggle Statusbar") \
				SeparatorMenuItem02 \
				MenuItem09(command="RunPerlCode(::ChooseAddPath(0,1))",label=_"Add Music",icon="gtk-add") \
				MenuItem10(command="RunPerlCode(::IdleScan)",label=_"Rescan Collection",icon="gtk-refresh") \
				MenuItem11(command="RunPerlCode(::IdleCheck)",label=_"Check Library") \
				LayoutItem \
				MenuItem12(click1=OpenCustom(Equalizer),label=_"Equalizer",icon=gmb-equalizer) \
				MenuItem13(command=OpenPref,label=_"Settings",icon="gtk-preferences") \
				MenuItem14(command=Quit,label=_"Quit",icon="gtk-quit")
	HBSearch = _SimpleSearch(noselector=0)
VPCenter0 = _VPCenter1 VPCenter2
VPCenter1 =  _VBFilterAndSongList1 VPFile
                VBFilterAndSongList1 = _SongList(cols="title artist length",mode=filter)
VPFile = _FPane10(tabicon="",hidebb=1,pages=folder,tabtitle=_"Library ")
VPCenter2 = VPFilterPlaylist VPQueue
VPFilterPlaylist = FPane1(tabicon="",nb=1,hidebb=1,pages=savedtree,tabtitle=_"Filters ") 
VPQueue = _QueueList(tabicon="",songtree=1,tabtitle=_"Queue (%n)",cols="queuenumber titleaa")
	HBStatusBar== -3Total(format=short,relief=none,button=1,mode=filter,size="small")